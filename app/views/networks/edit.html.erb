<h1>Editing Network #<%= @network.id %></h1>


<%= form_tag(network_url(@network), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @network.name %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= text_field_tag :password, @network.password %>
  </div>


  <div>
    <%= submit_tag "Update Network" %>
  </div>

<% end %>
