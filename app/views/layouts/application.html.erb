<!DOCTYPE html>
<html>
<head>
  <title>Startershipper</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <%= image_tag("/assets/logo.png") %>
  </div>
  <div class='container'
    <%= notice %>
    <nav>
      <%= link_to "Home", home_url %> |
        <% if session[:network_id] %>
          <%= link_to 'news feed', network_url(session[:network_id]) %> |
          <% else  %>
          <%= link_to "Networks", networks_url %> |
          <% end  %>
      <% if user_signed_in? %>
        <% if Profile.find_by_user_id(current_user.id)%>
          <%= link_to "my profile", profile_url(current_user.id) %> |
        <% else %>
         <%= link_to "+Profile", new_profile_url, class: "btn btn-s" %>
        <% end %>
      <% end %>
   </nav>
   <form class="navbar-form pull-right">
                 <% if user_signed_in? %>
                    Signed in as <%= current_user.email %>. Not you?
                    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
                  <% else %>
                    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
                <% end %>
  </form>
<%= yield %>
</div>
</body>
</html>
