<h1>Posts</h1>

<p><%= link_to 'Add a New Post', new_post_url %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th>Timestamp</th>
      <th>User</th>
      <th>Group</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.caption %></td>
      <td><%= post.timestamp %></td>
      <td><%= post.user_id %></td>
      <td><%= post.group_id %></td>
  
      <td><%= link_to 'Show', post_url(post) %></td>
      <td><%= link_to 'Edit', edit_post_url(post) %></td>
      <td><%= link_to 'Destroy', post_url(post), method: 'delete', data: { confirm: "Do you really want to delete this post?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

