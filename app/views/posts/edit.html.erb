<h1>Editing Post #<%= @post.id %></h1>


<%= form_tag(post_url(@post), method: 'put') do %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @post.title %>
  </div>

  <div>
    <%= label_tag :caption %><br />
    <%= text_field_tag :caption, @post.caption %>
  </div>

  <div>
    <%= label_tag :timestamp %><br />
    <%= datetime_select_tag :timestamp, @post.timestamp %>
  </div>

  <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id, @post.user_id %>
  </div>

  <div>
    <%= label_tag :group_id %><br />
    <%= number_field_tag :group_id, @post.group_id %>
  </div>

  
  <div>
    <%= submit_tag "Update Post" %>
  </div>

<% end %>
