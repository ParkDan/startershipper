<h1>Editing Post #<%= @post.id %></h1>


<%= form_tag(post_url(@post), method: 'put') do %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @post.title %>
  </div>

  <div>
    <%= label_tag :caption %><br />
    <%= text_field_tag :caption, @post.caption %>
  </div>

  <div>
    <%= submit_tag "Update Post" %>
  </div>

<% end %>
