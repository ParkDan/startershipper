<h1>New Post</h1>


<%= form_tag(posts_url, method: 'post') do %>


  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

    <div>
    <%= label_tag :caption %><br />
    <%= text_field_tag :caption %>
  </div>

    <div>
    <%= label_tag :timestamp %><br />
    <%= datetime_select_tag :timestamp %>
  </div>

    <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id %>
  </div>

    <div>
    <%= label_tag :group_id %><br />
    <%= number_field_tag :group_id %>
  </div>

  
  <div>
    <%= submit_tag "Create Post" %>
  </div>
<% end %>
