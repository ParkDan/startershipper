<div>
<h1>Add a new Post</h1>
<h3>Post a project, idea, or request to join a group</h3>


<%= form_tag(posts_url, method: 'post') do %>


  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

    <div>
    <%= label_tag :description %><br />
    <%= text_field_tag :caption %>
  </div>

  <div>
  <input name="user_id" type="hidden" value="<%= current_user.id %>">
  <div>

  <div>
  <!-- <input name="group_id" type="hidden" value= group_id -->
  <div>


  <div>
    <%= submit_tag "Create Post" %>
  </div>
<% end %>
</div>
