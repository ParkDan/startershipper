<h1>Editing Event #<%= @event.id %></h1>


<%= form_tag(event_url(@event), method: 'put') do %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @event.title %>
  </div>

  <div>
    <%= label_tag :caption %><br />
    <%= text_field_tag :caption, @event.caption %>
  </div>

  <div>
    <%= label_tag :date %><br />
    <%= date_select_tag :date, @event.date %>
  </div>

  <div>
    <%= label_tag :start_time %><br />
    <%= time_select_tag :start_time, @event.start_time %>
  </div>

  <div>
    <%= label_tag :end_time %><br />
    <%= time_select_tag :end_time, @event.end_time %>
  </div>

  <div>
    <%= label_tag :timestamp %><br />
    <%= datetime_select_tag :timestamp, @event.timestamp %>
  </div>

  <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id, @event.user_id %>
  </div>

  <div>
    <%= label_tag :group_id %><br />
    <%= number_field_tag :group_id, @event.group_id %>
  </div>

  
  <div>
    <%= submit_tag "Update Event" %>
  </div>

<% end %>
