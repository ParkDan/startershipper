<h1>New Event</h1>


<%= form_tag(events_url, method: 'post') do %>


  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

    <div>
    <%= label_tag :caption %><br />
    <%= text_field_tag :caption %>
  </div>

    <div>
    <%= label_tag :date %><br />
    <%= date_select_tag :date %>
  </div>

    <div>
    <%= label_tag :start_time %><br />
    <%= time_select_tag :start_time %>
  </div>

    <div>
    <%= label_tag :end_time %><br />
    <%= time_select_tag :end_time %>
  </div>

    <div>
    <%= label_tag :timestamp %><br />
    <%= datetime_select_tag :timestamp %>
  </div>

    <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id %>
  </div>

    <div>
    <%= label_tag :group_id %><br />
    <%= number_field_tag :group_id %>
  </div>

  
  <div>
    <%= submit_tag "Create Event" %>
  </div>
<% end %>
