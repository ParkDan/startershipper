<h1>New Profile</h1>


<%= form_tag(profiles_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

    <div>
    <%= label_tag :meet_pref %><br />
    <%= text_field_tag :meet_pref %>
  </div>

    <div>
    <%= label_tag :avail_times %><br />
    <%= text_field_tag :avail_times %>
  </div>

    <div>
    <%= label_tag :bio %><br />
    <%= text_area_tag :bio %>
  </div>

  <input name="user_id" type="hidden" value="<%= current_user.id %>">

  <div>
    <%= submit_tag "Create Profile" %>
  </div>
<% end %>
